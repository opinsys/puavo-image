PRECISE_IMAGE_TARGETS = thinclient-precise

TRUSTY_IMAGE_TARGETS = opinsys-trusty           \
		       opinsysextra-trusty      \
		       opinsysrestricted-trusty \
		       puavo-trusty

IMAGE_TARGETS = $(PRECISE_IMAGE_TARGETS) $(TRUSTY_IMAGE_TARGETS)

CHROOT_TARGETS = chroot                        \
                 cleanup-chroot                \
                 dist-upgrade                  \
                 image                         \
                 puppet-chroot                 \
                 puppet-chroot-error-on-change \
                 puppet-local                  \
                 update-chroot

OTHER_TARGETS = all help ${CHROOT_TARGETS}

help:
	@echo "Available targets are:"
	@echo "  ${OTHER_TARGETS}" | fmt
	@echo
	@echo "Available image types are:"
	@echo "  ${IMAGE_TARGETS}" | fmt

all: ${IMAGE_TARGETS}

# XXX these belong to some configuration file... actually this Makefile should
# XXX die... but we want at least some shell completions?

opinsys-trusty:
	@sudo puavo-build-image --build opinsys       \
				--distribution trusty \
                                --puppet-classes opinsysimage::opinsys

opinsysextra-trusty:
	@sudo puavo-build-image --build opinsysextra  \
				--distribution trusty \
                                --puppet-classes opinsysimage::opinsysextra

opinsysrestricted-trusty:
	@sudo puavo-build-image --build opinsysrestricted \
				--distribution trusty     \
                                --puppet-classes opinsysimage::opinsysrestricted

puavo-trusty:
	@sudo puavo-build-image --build puavo         \
				--distribution trusty \
                                --puppet-classes image::puavo

thinclient-precise:
	@sudo puavo-build-image --build thinclient     \
				--distribution precise \
				--puppet-classes image::thinclient

chroot cleanup-chroot dist-upgrade image puppet-chroot puppet-chroot-error-on-change puppet-local update-chroot:
	@sudo puavo-build-image --$@

.PHONY: ${IMAGE_TARGETS} ${OTHER_TARGETS}
